<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<body>
   
<div class="container">
        <h1>URL Shortner</h1>
        <form class="my-4 form-inline" action="/shortUrls" method="POST">
        <input class="form-control col mr-2" placeholder="Url" type="url" name="fullUrl" id="fullUrl">
        <button class="btn btn-success my-3" type="submit">Submit</button>
        </form>
    <table class="table table-striped table-responsive">
    <thead>

        <th> Full URL</th>
        <th> Short URL</th>
        <th>Clicks</th>
    </thead>
    <tbody>
        <% shortUrls.forEach(shortUrl=> { %>
        <tr>
            <td><a href=<%= shortUrl.fullUrl  %>> <%= shortUrl.fullUrl  %></a></td>
            <td><a href= <%= shortUrl.shortUrl  %>> <%= shortUrl.shortUrl  %></a></td>
            <td> <%= shortUrl.clicks  %></td>
        </tr>

        <% }) %>
    </tbody>
    </table>
</div>

</body>
</html>